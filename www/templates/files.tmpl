{{ define "files" }}
<nav class="mb-4 bg-zinc-50 p-2 rounded flex flex-row items-center">
  {{ $path := "" }}
  {{ range $index, $dir := split .CurrentPath "/" }}
  {{ if ne $dir "" }}
  {{ $path = join $path $dir }}
  <svg xmlns="http://www.w3.org/2000/svg"
	   fill="none"
	   viewBox="0 0 24 24"
	   stroke-width="1.5"
	   stroke="currentColor"
	   class="size-4">
	<path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
  </svg>
  <button hx-get="/files/{{ $path }}"
		  hx-target="#file-viewer"
		  hx-swap="innerHTML"
		  class="text-blue-800">
	{{ $dir }}
  </button>
  {{ end }}
  {{ end }}
</nav>

<div class="max-h-96 overflow-y-auto pr-1">
  <table class="w-full table-auto bg-zinc-50 rounded">
	<thead class="sticky top-0">
	  <tr class="bg-zinc-700 text-white">
		<th class="px-4 py-2 rounded-tl">Nome</th>
		<th class="px-4 py-2 rounded-tr">Tamanho</th>
	  </tr>
	</thead>
	<tbody>
	  {{ range .Files }}
	  <tr class="hover:bg-zinc-50">
		<td class="flex text-blue-900 hover:text-blue-950">
		  {{ if .IsDir }}
		  <button hx-get="/files/{{ .Path }}"
				  hx-target="#file-viewer"
				  hx-swap="innerHTML"
				  class="flex grow items-center px-4 py-2">


			<svg xmlns="http://www.w3.org/2000/svg"
				 fill="none"
				 viewBox="0 0 24 24"
				 stroke-width="1.5"
				 stroke="currentColor"
				 class="size-4 mr-1">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 12.75V12A2.25 2.25 0 0 1 4.5 9.75h15A2.25 2.25 0 0 1 21.75 12v.75m-8.69-6.44-2.12-2.12a1.5 1.5 0 0 0-1.061-.44H4.5A2.25 2.25 0 0 0 2.25 6v12a2.25 2.25 0 0 0 2.25 2.25h15A2.25 2.25 0 0 0 21.75 18V9a2.25 2.25 0 0 0-2.25-2.25h-5.379a1.5 1.5 0 0 1-1.06-.44Z" />
												</svg>
			{{ .Name }}
		  </button>
		  {{ else }}
		  <button hx-get="/preview/{{ .Path }}"
				  hx-target="#file-viewer"
				  hx-swap="innerHTML"
				  class="flex grow items-center px-4 py-2">
			<svg xmlns="http://www.w3.org/2000/svg"
				 fill="none"
				 viewBox="0 0 24 24"
				 stroke-width="1.5"
				 stroke="currentColor"
				 class="size-4 mr-1">
			  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 0 0-3.375-3.375h-1.5A1.125 1.125 0 0 1 13.5 7.125v-1.5a3.375 3.375 0 0 0-3.375-3.375H8.25m2.25 0H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 0 0-9-9Z" />
			</svg>
			{{ .Name }}
		  </button>
		  {{ end }}
		</td>
		<td class="px-4 py-2 text-right">{{ .Size | truncate }}{{ .SizeOrder  }}</td>
	  </tr>
	  {{ end }}
	</tbody>
  </table>
</div>

<div class="mt-6 flex justify-center overflow-x-auto space-x-4">
  {{ if gt .CurrentPage 1 }}
  <button hx-get="/files/{{ $.CurrentPath }}?page={{ sub .CurrentPage 1 }}"
		  hx-target="#file-viewer"
		  hx-swap="innerHTML"
		  class="bg-zinc-100 hover:bg-zinc-200 rounded px-1 py-1">
	<svg xmlns="http://www.w3.org/2000/svg"
		 fill="none"
		 viewBox="0 0 24 24"
		 stroke-width="1.5"
		 stroke="currentColor"
		 class="size-7">
	  <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 19.5 8.25 12l7.5-7.5" />
	</svg>
  </button>
  {{ end }}

  {{ range $i := until .TotalPages }}
  <button hx-get="/files/{{ $.CurrentPath }}?page={{ add $i 1 }}"
		  hx-target="#file-viewer"
		  hx-swap="innerHTML"
		  class="px-3 py-1 rounded {{ if eq $.CurrentPage (add $i 1) }} bg-zinc-700 hover:bg-zinc-900 text-white{{ else }}bg-zinc-100 hover:bg-zinc-200{{ end }}">
	{{ add $i 1 }}
  </button>
  {{ end }}

  {{ if lt .CurrentPage .TotalPages }}
  <button hx-get="/files/{{ $.CurrentPath }}?page={{ add .CurrentPage 1 }}"
		  hx-target="#file-viewer"
		  hx-swap="innerHTML"
		  class="bg-zinc-100 hover:bg-zinc-200 rounded px-1 py-1">
	<svg xmlns="http://www.w3.org/2000/svg"
		 fill="none"
		 viewBox="0 0 24 24"
		 stroke-width="1.5"
		 stroke="currentColor"
		 class="size-7">
	  <path stroke-linecap="round" stroke-linejoin="round" d="m8.25 4.5 7.5 7.5-7.5 7.5" />
	</svg>
  </button>
  {{ end }}
</div>
{{ end }}
